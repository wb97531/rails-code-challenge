<%= form_for(@order) do |f| %>
  <%= f.fields_for :line_items do |line_item_form| %>
    <p>
      <%= line_item_form.label :quantity %>  <%= line_item_form.number_field :quantity %>
      <%= line_item_form.label :unit_price %>  <%= line_item_form.number_field :unit_price %>
    </p>
  <% end %>

  <p>
    <%= f.label :shipped_at, 'Shipped at time (optional)' %>
    <%= f.datetime_field :shipped_at %>
  </p>

  <%= f.submit %>
<% end %>
